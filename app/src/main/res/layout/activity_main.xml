<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="30sp"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/bt_clear"
                style="@style/NumberButton"
                android:text="AC"
                />
            <TextView
                android:id="@+id/bt_open"
                style="@style/NumberButton"
                android:text="("
                />
            <TextView
                android:id="@+id/bt_close"
                style="@style/NumberButton"
                android:text=")"
                />
            <TextView

                android:id="@+id/bt_disivion"
                style="@style/NumberButton"
                android:text="/"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/bt_7"
                style="@style/ActionButton"
                android:text="7"
                />
            <TextView
                android:id="@+id/bt_8"
                style="@style/ActionButton"
                android:text="8"
                />
            <TextView
                android:id="@+id/bt_9"
                style="@style/ActionButton"
                android:text="9"
                />
            <TextView
                android:id="@+id/bt_mult"
                style="@style/NumberButton"
                android:text="*"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/bt_4"
                style="@style/ActionButton"
                android:text="4"
                />
            <TextView
                android:id="@+id/bt_5"
                style="@style/ActionButton"
                android:text="5"
                />
            <TextView
                android:id="@+id/bt_6"
                style="@style/ActionButton"
                android:text="6"
                />
            <TextView
                android:id="@+id/bt_plus"
                style="@style/NumberButton"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/bt_1"
                style="@style/ActionButton"
                android:text="1"
                />
            <TextView
                android:id="@+id/bt_2"
                style="@style/ActionButton"
                android:text="2"
                />
            <TextView
                android:id="@+id/bt_3"
                style="@style/ActionButton"
                android:text="3"
                />
            <TextView
                android:id="@+id/bt_min"
                style="@style/NumberButton"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/bt_point"
                style="@style/ActionButton"
                android:text="."
                />
            <TextView
                android:id="@+id/bt_0"
                style="@style/ActionButton"
                android:text="0"
                />
            <TextView
                android:id="@+id/bt_back"
                style="@style/ActionButton"
                android:text="Back"
                />
            <TextView
                android:id="@+id/bt_equal"
                style="@style/NumberButton"
                android:text="="
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

